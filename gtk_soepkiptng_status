"   ...    ...   ",
"   ...    ...   ",
"   ...    ...   ",
"   ...    ...   ",
"   ...    ...   ",
"   ...    ...   ",
"   ...    ...   ",
"                ",
"                ",
"                ",
"                ",
"                ");

#my $window = new Gtk::Window;
my $window = new Gtk::Widget "GtkWindow",
	type => -toplevel,
	title => "SoepkipTNG status",
	allow_grow => 1,
	allow_shrink => 1,
;

#$window = new Gnome::Panel::AppletWidget 'soepkiptng.pl';
#realize $window;

#my $Label = Gtk::Widget->new("Gnome::CanvasText",
