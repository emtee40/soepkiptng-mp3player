my $label = new Gtk::Label("Artist\nTitle\nAlbum");
$label->set_justify('left');
#$label->set_usize(300,40);

my $label2 = new Gtk::Label("");

$button_pause = Gtk::Widget->new("GtkButton",
 -label   => "Pause",
 -border_width => 1,
 -clicked => sub {
	if($playerpid) {
		if(is_paused($playerpid)) {
			kill "CONT", $playerpid;
		} else {
			kill "STOP", $playerpid;
		}
	}
  },
  -visible=>1,
#  -height=>15,
);
#$button_resume = Gtk::Widget->new("GtkButton",
