use Cwd qw'abs_path';

# find program directory
$_ = $0;
while(-l) {
	my $l = readlink or die "readlink $_: $!\n";
	if($l =~ m|^/|) { $_ = $l; } else { s|[^/]*$|/$l|; }
}
m|(.*)/|;
my $progdir = abs_path($1);

require "$progdir/../soepkiptng.lib";
read_configfile(\%conf);
$ENV{PATH} = "$progdir:$ENV{PATH}";

open STDIN, "/dev/null";
open STDOUT, ">/dev/null";
open STDERR, ">/dev/null";

if(fork == 0) {
	setpgrp; # protect us from kills
	while(getppid != 1) { select undef, undef, undef, 0.1 };
	pause("resume");
	exit 0;
}

pause("pause0");
# wait until pause is in effect
open F, ">/dev/dsp";
close F;

exec "mp", "-m", @ARGV;
die "mp -m @ARGV: $!\n";
